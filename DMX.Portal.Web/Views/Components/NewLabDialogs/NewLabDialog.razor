@using DMX.Portal.Web.Views.Bases

<DialogBase @ref=Dialog
            Title="Lab Details"
            ButtonTitle="Save New Lab"
            MinHeight="335px"
            Width="350px"
            OnClick=@AddLabViewAsync>

    <Content>
        <div>
            <ContainerBase CssClass="new-lab-textbox">
                <TextBoxBase @ref=LabName
                             @bind-Value="@LabView.Name"
                             Placeholder=@nameof(LabView.Name) />

            </ContainerBase>

            <ContainerBase CssClass="new-lab-textbox-bottom">
                <TextBoxBase @ref=LabDescription
                             @bind-Value="@LabView.Description"
                             Placeholder=@nameof(LabView.Description) 
                             Multiline=true />
            </ContainerBase>
        </div>
        <ValidationSummaryBase @ref=LabNameValidationSummary
                               Key=@nameof(LabView.Name)
                               ValidationData=@Exception?.Data
                               Color="Red"
                               Message=@ErrorMessage />

        <ValidationSummaryBase @ref=LabDescriptionValidationSummary
                               Key=@nameof(LabView.Description)
                               ValidationData=@Exception?.Data
                               Color="Red"
                               Message=@ErrorMessage />

        <SpinnerBase @ref=Spinner />
    </Content>

</DialogBase>