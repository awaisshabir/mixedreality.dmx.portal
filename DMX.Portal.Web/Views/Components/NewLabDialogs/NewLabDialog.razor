@using DMX.Portal.Web.Views.Bases

<DialogBase @ref=Dialog
            Title="Lab Details"
            ButtonTitle="Save New Lab"
            OnClick=@AddLabViewAsync >

    <Content>
        <TextBoxBase @ref=LabName
                     @bind-Value="@LabView.Name" />

        <TextBoxBase @ref=LabDescription 
                     @bind-Value="@LabView.Description" />

        <ValidationSummaryBase @ref=ContentValidationSummary 
                               Key=@nameof(LabView.Name) 
                               ValidationData=@Exception?.Data 
                               Color="Red"
                               Message=@ErrorMessage />

        <SpinnerBase @ref=Spinner />
    </Content>

</DialogBase>