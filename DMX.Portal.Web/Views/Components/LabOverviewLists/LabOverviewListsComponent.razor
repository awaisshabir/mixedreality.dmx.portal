@using DMX.Portal.Web.Views.Components.LabOverviews
@using DMX.Portal.Web.Views.Bases
@using Models.Views.Components.LabOverviewListComponents
@using PrettyBlazor

<Condition Evaluation=@(State is LabOverviewListComponentState.Loading)>
    <Match>
        <LabelBase Text="Loading..." />
    </Match>

    <NotMatch>
        <Iterations Items=Labs Context="Lab">
            <LabOverviewComponent Lab="Lab" />
        </Iterations>
    </NotMatch>
</Condition>